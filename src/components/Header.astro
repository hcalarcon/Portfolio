<script is:script>
    let isOpen = false;
  
    function toggleMenu() {
      isOpen = !isOpen;
      updateMenu();
    }
  
    function closeMenu() {
      isOpen = false;
      updateMenu();
    }
  
    function updateMenu() {
      const nav = document.getElementById('nav-menu');
      const overlay = document.getElementById('overlay');
      if (isOpen) {
        nav.classList.add('open');
        overlay.style.display = 'block';
      } else {
        nav.classList.remove('open');
        overlay.style.display = 'none';
      }
    }
  </script>