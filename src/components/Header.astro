    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 50;
    background-color: rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 768px) {
    .hamburger {
      display: block;
    }

    nav {
      position: absolute;
      top: 100%;
      right: 0;
      width: 200px;
      padding: 20px;
      display: none;
      z-index: 100;
    }

    nav.open {
      display: block;
    }

    nav ul {
      flex-direction: column;
      gap: 15px;
    }
  }

  
