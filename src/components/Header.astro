---
let isOpen = false;
---

<header>
    <h1>&lt;HCA /&gt;</h1>
    <button 
    class="hamburger" 
    onclick="toggleMenu()"
    aria-label="Abrir menú de navegación"
    aria-expanded={isOpen ? "true" : "false"}
  >
    ☰
  </button>
    <nav id="nav-menu" class={isOpen ? 'open' : ''}>
    <ul>
        <li><a onclick="closeMenu()" href="#hero">Sobre mi</a></li>
        <li><a onclick="closeMenu()" href="#skill">Skills</a></li>
        <li><a onclick="closeMenu()" href="#projects">Proyectos</a></li>
        <li><a onclick="closeMenu()" href="#teaching">Enseñanza</a></li>
        <li><a onclick="closeMenu()" href="#contact">Contacto</a></li>
    </ul>
</nav>

<div id="overlay" class="overlay" onclick="closeMenu()" style="display: none;"></div>
</header>


<style>
