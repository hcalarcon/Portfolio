      </div>
      <Image src={foto} alt="mi foto" loading="eager" />
    </div>
  </div>

  <style>
    section {
      min-height: 100vh;
    }

    .container {
      width: 100%;
      height: 80vh;
      display: flex;
      flex-wrap: wrap;
      flex-direction: row;
      justify-content: space-around;
      align-content: center;
      padding: 0 10px;
    }

    img {
      width: 350px;
      height: 350px;
      border-radius: 50%;
      object-fit: cover;
      position: relative;
      z-index: 2;
      box-shadow: 0 0 10px 2px #fefefe;
      transition: transform 0.5s ease;
    }

    img:hover {
      transform: scale(1.1);
    }

    .texto,
    .imagen {
      display: flex;
      flex-direction: column;
      justify-content: center;
      margin-top: 20px;
      position: relative;
      padding: 0;
    }

    h1 {
      font-size: clamp(36px, 4vw, 64px);
    }

    .texto p:nth-child(2) {
      font-size: clamp(18px, 2vw, 32px);
    }

    .botones {
      display: flex;
      flex-direction: row;
      margin-top: 20px;
    }

    a {
      text-decoration: none;
      padding: 10px 20px;
      border-radius: 5px;
      color: white;
      margin-right: 10px;
      border: solid 1px #fff;
    }

    #cta {
      background-color: white;
      color: #9b05e0;
    }

    a:hover {
      transform: scale(1.05);
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
      transition:
        transform 0.3s ease,
        box-shadow 0.3s ease;
    }

    .blob-container {
      position: absolute;
      z-index: 0;
      width: 60vw;
      left: -40px;
      max-width: 450px;
    }

    .blob {
      width: 100%;
      height: auto;
    }

    .blob-container:nth-of-type(1) {
      animation: girarLento 20s linear infinite;
    }
    .blob-container:nth-of-type(2) {
      transform: rotate(45deg);
      animation: girarInverso 30s linear infinite;
    }
    .blob-container:nth-of-type(3) {
      animation: girarLento 25s linear infinite reverse;
    }

    @keyframes girarLento {
      0% {
        transform: rotate(0deg);
      }
      100% {
        transform: rotate(360deg);
      }
    }

    @keyframes girarInverso {
      0% {
        transform: rotate(360deg);
      }
      100% {
        transform: rotate(0deg);
      }
    }

    @media (width < 700px) {
      .container {
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
      }
      img {
        width: 260px;
        height: 260px;
      }

      .imagen {
        order: -1;
        position: relative;
      }

      .cuadrado {
        width: 250px;
        height: 250px;
      }

      .blob-container {
        width: 92vw;
        top: -40px;
        left: -40px;
      }
    }
  </style>
</section>
