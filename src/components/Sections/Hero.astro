        <svg viewBox="0 0 200 200" class="blob">
          <path
            d="M34.3,-44.8C45.2,-39.3,55.2,-30.3,59.6,-18.9C64,-7.5,62.8,6.3,56.7,16.4C50.7,26.6,39.8,33.2,29.5,45.2C19.3,57.2,9.6,74.7,-4.9,81.4C-19.4,88,-38.7,84,-51.1,72.7C-63.4,61.3,-68.8,42.7,-69,26.2C-69.2,9.7,-64.1,-4.8,-56.9,-15.9C-49.7,-27,-40.4,-34.8,-30.5,-40.6C-20.6,-46.4,-10.3,-50.3,0.7,-51.2C11.7,-52.2,23.4,-50.3,34.3,-44.8Z"
