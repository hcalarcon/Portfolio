---
import { Image } from "astro:assets"
import malvinas from "../../assets/malvinas.png"
---

<footer class="footer">
      <p>© 2025 Cristian Alarcón. Todos los derechos reservados</p>
      <div class="footer-socials">
        <a href="https://github.com/hcalarcon" aria-label="Github" target="_blank"><i class="fab fa-github"></i></a>
        <a href="https://www.linkedin.com/in/hcalarcon" target="_blank" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
        <a href="mailto:hernaldo.alar@gmail.com" aria-label="Email"><i class="fas fa-envelope"></i></a>
      </div>
      <div class="malvinas">
        <p>Las Malvinas son Argentinas</p>
        <Image src={malvinas} alt={"Islas Malvinas"} width={100}/>
      </div>
  </footer>

  
  <style>
    .footer {
      background-color: #7A04B0;
      color: white;
      padding: 20px 20px;
      text-align: center;
      margin-top: 20px;
      position: relative;
      min-height: 30vh;
    }

    .footer-socials {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 16px;
    }

    .footer-socials a {
      color: white;
      font-size: 20px;
      text-decoration: none;
    }

    .footer-socials a:hover {
      opacity: 0.8;
    }

    .icon {
      display: inline-block;
      width: 20px;
      height: 20px;
      background-size: contain;
    }

    .malvinas{
      display: flex;
      align-items: center;
      align-self: center;
      justify-content: center;
      flex-wrap: wrap;
    }

    @media (width>700px){
      .malvinas{
        position: absolute;
        right: 0;
      }
    }
  </style>