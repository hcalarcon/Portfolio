---
const { title, subtitle, description } = Astro.props;
---

<article class="animate-on-scroll">
  <h3 class="experience-title">{title}</h3>
  <p class="experience-subtitle">{subtitle}</p>
  <p class="experience-description">
    {description}
  </p>
</article>

<style>
  article {
    border-left: 4px solid #fff;
    padding-left: 24px;
    margin-top: 20px;
  }
  .experience-list {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .experience-title {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 8px;
  }

  .experience-subtitle {
    font-size: 16px;
    margin-bottom: 4px;
    color: #000000;
  }

  .experience-description {
    font-size: 16px;
    line-height: 1.5;
  }
</style>
