---
const { title, description, imageSrc, codigo, badges = [], demo, code, usemodal = false} = Astro.props;
import { Image } from "astro:assets";
---

<article class="project-card">
  <Image src={imageSrc} alt={title} loading="lazy"  height={210} width={400} />
  <div class="card-content">
    <h3>{title}</h3>
    <p>{description}</p>
    <ul class="badges">
      {badges.map(b => <li>{b}</li>)}
    </ul>
    <div class="buttons">
      {
        usemodal ? (<button id="openModalBtn">Ver demo</button>):( <a href={demo} target="_blank">Ver demo</a>)
      }
      <a href={code} target="_blank">CÃ³digo fuente</a>
    </div>
  </div>

  <dialog id="demoModal">
    <h4>Instrucciones para probar la demo</h4>
    <p>ðŸ“± InstalÃ¡ Expo Go en tu celular.</p>
    <p>Para android <a href="https://play.google.com/store/apps/details?id=host.exp.exponent&pcampaignid=web_share">aquÃ­</a></p>
    <p>Para iOS <a href="https://apps.apple.com/us/app/expo-go/id982107779">aquÃ­</a></p>
      <p>ðŸ“· EscaneÃ¡ este QR:</p>
    <img src={codigo.src} alt="QR para abrir la app" width={200} height={200} />
    <form method="dialog">
      <button>Cerrar</button>
    </form>
  </dialog>
</article>

<script type="module">
  const btn = document.getElementById('openModalBtn');
  const modal = document.getElementById('demoModal');
  if (btn && modal) {
    btn.addEventListener('click', () => modal.showModal());
  }
</script>

<style>
  .project-card {
    background: rgba(255, 255, 255, 0.08);
    color: white;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    max-width: 400px;
    min-width: 350px;
    height: 400px;
    width: 33%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
  }

   Image {
    width: 100%;
    height: 50%;
    object-fit: contain;
  }

  .card-content {
    padding: 10px;
    height: 50%;
    position: relative;
  }

  .card-content h3 {
    margin: 0 0 10px;
    font-size: 20px;
  }

  .card-content p {
    font-size: 14px;
    margin-bottom: 12px;
  
  }

  .badges {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-bottom: 12px;
    padding: 0;
    list-style: none;
  }

  .badges li {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    padding: 4px 10px;
    font-size: 12px;
  }

  .buttons {
    display: flex;
    gap: 10px;
    position: absolute;
    bottom: 10px;
  }

  .buttons a, .buttons button {
    padding: 6px 12px;
    background: transparent;
    border: 1px solid white;
    color: white;
    border-radius: 5px;
    font-size: 13px;
    text-decoration: none;
    transition: background 0.3s ease;
  }

  .buttons a:hover, .buttons button:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  dialog {
  border: none;
  border-radius: 12px;
  padding: 20px 30px;
  background: rgba(30, 30, 30, 0.95);
  color: white;
  max-width: 400px;
  width: 90%;
  margin: auto;
  text-align: center;
  box-shadow: 0 0 20px rgba(0,0,0,0.4);
  backdrop-filter: blur(10px);
}

dialog::backdrop {
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
}

dialog h4 {
  margin-top: 0;
  font-size: 1.4rem;
}

dialog p {
  margin: 10px 0;
  font-size: 0.95rem;
}

dialog img {
  max-width: 200px;
  margin: 10px 0;
  border-radius: 10px;
  border: 2px solid white;
}

dialog a {
  color: #00baff;
  text-decoration: underline;
}

dialog form button {
  margin-top: 15px;
  padding: 8px 16px;
  border: none;
  background-color: #6d23b8;
  color: #222;
  border-radius: 6px;
  cursor: pointer;
  font-weight: bold;
  transition: background 0.3s ease;
}

dialog form button:hover {
  background-color: #ddd;
}

</style>
